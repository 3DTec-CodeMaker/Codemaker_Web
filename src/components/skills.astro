---
import Container from "./Container.astro";
import Tooltip from "./tooltip.astro";
---

<Container class="w-full lg:w-1/3 flex flex-col gap-4">
  <h3 class="text-2xl font-medium mb-4">Skills</h3>

  <!-- Frontend Section -->
  <div class="flex justify-between gap-6">
    <p class="text-white">Frontend</p>
    <div class="flex flex-wrap gap-4 justify-end">
      <Tooltip text="HTML5 · 3 yrs">
        <i
          class="ri-html5-fill text-3xl text-[--white-icon] transition-colors duration-300 ease-in-out hover:text-white"
        ></i>
      </Tooltip>
      <Tooltip text="CSS3 · 3 yrs">
        <i
          class="ri-css3-fill text-3xl text-[--white-icon] transition-colors duration-300 ease-in-out hover:text-white"
        ></i>
      </Tooltip>
      <Tooltip text="JavaScript · 2 yrs">
        <i
          class="ri-javascript-fill text-3xl text-[--white-icon] transition-colors duration-300 ease-in-out hover:text-white"
        ></i>
      </Tooltip>
      <Tooltip text="ReactJS · 1 yr">
        <i
          class="ri-reactjs-fill text-3xl text-[--white-icon] transition-colors duration-300 ease-in-out hover:text-white"
        ></i>
      </Tooltip>
    </div>
  </div>

  <!-- Backend Section -->
  <div class="flex justify-between gap-6">
    <p class="text-white">Backend</p>
    <div class="flex flex-wrap gap-4 justify-end">
      <Tooltip text="NodeJS · 1 yr">
        <i
          class="ri-nodejs-fill text-3xl text-[--white-icon] transition-colors duration-300 ease-in-out hover:text-white"
        ></i>
      </Tooltip>
      <Tooltip text="Supabase · 5 mo">
        <i
          class="ri-supabase-fill text-2xl text-[--white-icon] transition-colors duration-300 ease-in-out hover:text-white"
        ></i>
      </Tooltip>
      <Tooltip text="MySQL · 2 yrs">
