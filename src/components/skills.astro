  <div class="flex justify-between gap-10">
    <p class="text-[--white-icon-tr]">Learning</p>

    <div class="flex gap-4">
      <Tooltip text="NextJS · N/A">
        <i
        class="ri-nextjs-fill text-3xl text-[--white-icon-tr] transition-colors duration-300 ease-in-out hover:text-[--white-icon]"
      ></i>
      </Tooltip>
      <Tooltip text="TypeScript · 1 mo">
        <svg
        xmlns="http://www.w3.org/2000/svg"
        width="1em"
        height="1em"
        viewBox="0 -3 24 24"
        class="text-3xl text-[--white-icon-tr] transition-colors duration-300 ease-in-out hover:text-[--white-icon]"
      >
        <path
          fill="currentColor"
